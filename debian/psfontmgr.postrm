#! /bin/sh
# postrm script for defoma
#
# see: dh_installdeb(1)

set -e

FILE='/etc/defoma/hints/defoma-ps.hints'

if [ "$1" = remove ]; then
  rm -rf /var/lib/defoma/psfontmgr.d > /dev/null 2>&1 || true
fi

if [ "$1" = purge ]; then
  rm -f $FILE $FILE~ > /dev/null 2>&1 || true
  rmdir /etc/defoma/hints > /dev/null 2>&1 || true
fi

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#


